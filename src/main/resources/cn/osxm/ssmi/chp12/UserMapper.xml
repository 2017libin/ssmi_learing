<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.osxm.ssmi.chp12.UserMapper">
	<!-- <select id="selectUser" resultType="cn.osxm.ssmi.com.User">-->
	<select id="selectUser" resultType="User">
		select * from User where id = #{id}
	</select>
	<select id="findUserByName" resultType="User">
		select * from User where name like '%'#{name}
	</select>
	
	<select id="selectUserOneSimpleParam" resultType="cn.osxm.ssmi.com.User">
		select * from user where name = #{name}
	</select>
	<select id="selectUserMoreSimpleParam" parameterType="string" resultType="cn.osxm.ssmi.com.User">
		select * from user where  deptid = #{deptId} and name like #{name}
	</select>

	<insert id="insertUser" parameterType="cn.osxm.ssmi.com.User">
		insert into User(name,deptid) values (#{name},#{deptId})
	</insert>
</mapper>
